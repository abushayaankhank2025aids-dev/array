#include<stdio.h>
int main()
{
    int i,m,n,j,a,b;
    printf("enter the number of rows   ");
    scanf("%d",&m);
    printf("enter the number of column  ");
    scanf("%d",&n);
    int arr[m][n];
    for (i=0;i<m;i++)
    {
        for(j=0;j<n;j++)
        {
            printf("A[%d][%d]=",i+1,j+1);
            scanf("%d",&arr[i][j]);
        }
            
    }
    for (i=0;i<m;i++)
    {
        for(j=0;j<n;j++)
        {
            printf("%d      ",arr[i][j]);
        }
        printf("\n");
        printf("\n");
    }
    for (i=0;i<n;i++)
    {
        for(j=0;j<m;j++)
        {
            printf("%d      ",arr[j][i]);
        }
        printf("\n");
        printf("\n");
    }


}
